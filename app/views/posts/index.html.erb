<h1>All posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>

  </tr>
 
  <% @posts.reverse.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.author %></td>
      <td><%= post.created_at %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>

    

  
    </tr>
  <% end %>
  <%= link_to 'New Post', new_post_path %>
</table>

<%=render 'paginate' %>